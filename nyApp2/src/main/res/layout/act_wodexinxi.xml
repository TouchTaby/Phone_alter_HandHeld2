<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gsyong.ny.nyapp.my_toptitle
        android:id="@+id/toptitle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorAccent">
    </com.gsyong.ny.nyapp.my_toptitle>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">

        <TableRow
            style="@style/tablerow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/th_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="零售店名称：" />

            <EditText
                android:id="@+id/view_xx_mingzi"
                style="@style/edittext1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"/>


        </TableRow>


        <TableRow
            style="@style/tablerow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/th_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="地址：" />

            <EditText
                android:id="@+id/view_xx_dizhi"
                style="@style/edittext1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"/>


        </TableRow>


        <TableRow
            style="@style/tablerow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/th_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="经营许可证号：" />

            <EditText
                android:id="@+id/view_xx_xukezheng"
                style="@style/edittext1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"/>
        </TableRow>


        <TableRow
            style="@style/tablerow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/th_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="许可证有效期：" />

            <EditText
                android:id="@+id/view_xx_youxiaoqi"
                style="@style/edittext1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"/>


        </TableRow>

        <TableRow
            style="@style/tablerow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                style="@style/th_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="系统使用期限：" />

            <EditText
                android:id="@+id/view_xx_qixian"
                style="@style/edittext1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"/>


        </TableRow>

        <TableRow
            style="@style/tablerow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </TableRow>


    </TableLayout>

</LinearLayout>